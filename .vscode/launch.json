{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:3000/index.html",
            "webRoot": "${workspaceFolder}/nodetree-web"
        },
        {
            "name": "Launch localhost",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:3000/index.html",
            "webRoot": "${workspaceFolder}/nodetree-web",
            "pathMappings": [
                {
                    "url": "http://localhost:3000/home/chin/Projects/nodetree/nodetree-web/src",
                    "path": "${workspaceFolder}/nodetree-web/src"
                }
            ]
        }
    ]
}